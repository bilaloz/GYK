<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:padding="32dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/turkcellLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/turkcelllogo" />


    <TextView
        android:id="@+id/turkcellBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turkcellLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Turkcell Geleceği Yazan Kadınlar"
        android:textColor="@color/colorWhite"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/linearKul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/kulAdiTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/turkcellBaslik"
            android:layout_weight="1"
            android:text="Kullanıcı Adı :"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/kulAdiEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:hint="kul adi"
            android:layout_below="@id/turkcellBaslik"
            android:layout_toRightOf="@id/kulAdiTv"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linarSifre"
        android:layout_below="@id/linearKul"
        android:weightSum="4">


        <TextView
            android:id="@+id/kulSifreTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Şifre :"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/sifreEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/kulSifreTv"
            android:layout_weight="2"
            android:hint="sifre"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnGirisYap"
        android:layout_below="@+id/linarSifre"
        android:layout_marginTop="20dp"
        android:text="GİRİŞ YAP"
        android:layout_centerHorizontal="true"
        android:background="#fdc908"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnGirisYap"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:alpha="0.9"
            android:layout_weight="2"
            android:text="Kayıt ol"
            android:id="@+id/btnKayit"
            android:background="#FFFFFF"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:background="@drawable/ic_settings_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_width="wrap_content"
        android:background="@drawable/ic_help_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />


</RelativeLayout>