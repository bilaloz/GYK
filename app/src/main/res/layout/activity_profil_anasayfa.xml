<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ProfilAnasayfa">

    <ImageView
        android:id="@+id/imagePF"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/edtKulAdi"
        android:layout_toRightOf="@id/imagePF"
        android:text="Kullanıcı Adı Gelecek"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:fontFamily="cursive"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Takipçi Sayısı"
        android:id="@+id/tvTakipciSayisi"
        android:layout_marginTop="20dp"
        android:layout_below="@id/edtKulAdi"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/imagePF"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@id/imagePF"
        android:id="@+id/listeTakipci"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>