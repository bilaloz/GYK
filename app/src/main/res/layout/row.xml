<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/kulImg"
        android:background="@drawable/ic_account_circle_black_24dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/kulAdi"
        android:text="Buraya Isım Gelicek"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/kulImg"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtAciklama"
        android:layout_alignParentRight="true"
        android:text="Buraya Şehir"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:alpha="0.1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/kulImg"
        android:layout_height="1dp"
        android:background="#000"></View>

</RelativeLayout>